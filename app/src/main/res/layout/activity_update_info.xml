<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_backgroud"
    android:orientation="vertical" >

    <include 
        android:id="@+id/title"
        layout="@layout/activity_title01" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_exit"
        android:layout_below="@+id/title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/layout_pass_color" >

                <TextView
                    android:id="@+id/tv_head"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="头像"
                    android:textSize="15dp" />

                <com.ugiant.widget.CircleImageView
                    android:id="@+id/iv_headImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/iv_right_next"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:text="" />
            </RelativeLayout>

            <View style="@style/cutting_line" />

            <RelativeLayout
                android:id="@+id/rl_username"
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="用户名 "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="" />
            </RelativeLayout>

            <View style="@style/cutting_line" />

            <RelativeLayout
                android:id="@+id/rl_nickname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_pass_color"
                android:clickable="true"
               >

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="昵称 "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_nick"
                    android:background="@drawable/layout_pass_color"
                    android:drawableRight="@drawable/iv_right_next"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="" />
            </RelativeLayout>

<View style="@style/cutting_line" />
            <RelativeLayout
                android:id="@+id/rl_gender"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_pass_color"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_g"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="性别 "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_g"
                    android:drawableRight="@drawable/iv_right_next"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="" />
            </RelativeLayout>

            <View style="@style/cutting_line" />

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_pass_color"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="地址管理 "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_address_name"
                    android:drawableRight="@drawable/iv_right_next"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="" />
            </RelativeLayout>

            <View style="@style/cutting_line" />
            <RelativeLayout
                android:id="@+id/rl_update_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_pass_color"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_update_pwd_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="修改密码 "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_tv_update_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_update_pwd_name"
                    android:drawableRight="@drawable/iv_right_next"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="" />
            </RelativeLayout>

            <View style="@style/cutting_line" />
            <RelativeLayout
                android:id="@+id/rl_forget_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_pass_color"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_forget_pwd_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="忘记密码"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_forget_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_forget_pwd_name"
                    android:drawableRight="@drawable/iv_right_next"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="" />
            </RelativeLayout>

            <View style="@style/cutting_line" />
            
            <RelativeLayout
                android:id="@+id/rl_bind_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_pass_color"
                android:clickable="true" >

                <TextView
                    android:id="@+id/tv_bind_phone_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="绑定手机"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_bind_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_bind_phone_name"
                    android:drawableRight="@drawable/iv_right_next"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:text="" />
            </RelativeLayout>

            <View style="@style/cutting_line" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/orange"
        android:textSize="17dp" />

</RelativeLayout>