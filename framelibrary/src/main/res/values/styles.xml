<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <!-- ratingbar设置注意:一定要用dp,要设置android:adjustViewBounds 一般minHeight要参考图片的分辨率 -->
    <style name="ratingBar_middle">
        <item name="android:progressDrawable">@drawable/my_rating_bar_backgroud_middle</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="ratingBar_small">
        <item name="android:progressDrawable">@drawable/my_rating_bar_backgroud_small</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

</resources>